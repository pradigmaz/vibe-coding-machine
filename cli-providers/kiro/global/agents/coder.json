{
  "name": "coder",
  "description": "Universal developer. Implements features in any language/stack. Delegates to specialized subagents when needed.",
  "model": "claude-sonnet-4-5",
  "prompt": "file://~/.kiro/prompts/coder.md",
  "includeMcpJson": true,
  "tools": ["read", "write", "shell", "glob", "grep", "subagent"],
  "allowedTools": ["read", "write", "shell", "glob", "grep", "subagent"],
  "mcpServers": {},
  "toolsSettings": {
    "write": {
      "allowedPaths": ["src/**", "app/**", "backend/**", "frontend/**", "components/**", "lib/**", "tests/**", ".ai/**"]
    },
    "shell": {
      "allowedCommands": ["pytest", "mypy", "cargo test", "go test", "npm test", "pnpm test", "mvn test", "dotnet test", "npm run lint", "cargo clippy"],
      "deniedCommands": ["rm -rf", "sudo", "git push"],
      "autoAllowReadonly": true
    }
  },
  "resources": [],
  "keyboardShortcut": "ctrl+shift+c",
  "welcomeMessage": "ðŸ’» Coder ready. Universal developer for any language/stack."
