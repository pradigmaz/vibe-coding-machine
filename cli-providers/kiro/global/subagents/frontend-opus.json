{
  "name": "frontend-opus",
  "description": "Эскалация для сложных frontend задач: performance, сложный UI/UX.",
  "model": "claude-opus-4-5",
  "fallbackModel": "claude-sonnet-4-5",
  "prompt": "file://~/.kiro/prompts/frontend-opus.md",
  "includeMcpJson": true,
  "tools": ["read", "write", "shell", "glob", "@shadcn", "@playwright"],
  "allowedTools": [
    "read",
    "write",
    "shell",
    "glob",
    "@shadcn/*",
    "@playwright/*"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": ["app/**", "frontend/**", "src/**", "components/**", ".ai/**"]
    },
    "shell": {
      "allowedCommands": ["pnpm", "tsc", "vitest"],
      "autoAllowReadonly": true
    }
  },
  "resources": [],
  "welcomeMessage": "Frontend-Opus активирован. Оптимизирую производительность..."
}

