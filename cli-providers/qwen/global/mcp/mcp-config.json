{
  "mcpServers": {
    "code-index": {
      "command": "uvx",
      "args": ["code-index-mcp"],
      "description": "Code analysis and symbol search - essential for repo auditing",
      "trust": false,
      "includeTools": [
        "set_project_path",
        "search_code_advanced",
        "find_files",
        "get_file_summary",
        "get_symbol_body"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Knowledge graph for tracking project context and decisions",
      "trust": false,
      "includeTools": [
        "create_entities",
        "add_observations",
        "search_nodes",
        "read_graph"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Step-by-step reasoning for complex architectural decisions",
      "trust": false
    },
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "${CONTEXT7_API_KEY}"
      ],
      "description": "Documentation search for libraries and frameworks",
      "trust": false,
      "includeTools": [
        "resolve-library-id",
        "query-docs"
      ]
    },
    "Ref": {
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "${REF_API_KEY}"
      },
      "description": "Search documentation from GitHub and web",
      "trust": false,
      "includeTools": [
        "ref_search_documentation",
        "ref_read_url"
      ]
    },
    "pg-aiguide": {
      "url": "https://mcp.tigerdata.com/docs",
      "description": "PostgreSQL and TimescaleDB documentation and best practices",
      "trust": false,
      "includeTools": [
        "semantic_search_postgres_docs",
        "semantic_search_tiger_docs",
        "view_skill"
      ]
    },
    "mcp-compass": {
      "command": "npx",
      "args": ["-y", "mcp-compass"],
      "description": "Discover and search available MCP servers",
      "trust": false,
      "includeTools": [
        "search_mcp_servers",
        "get_server_details"
      ]
    }
  },
  "mcp": {
    "allowed": [
      "code-index",
      "memory",
      "sequential-thinking",
      "Context7",
      "Ref",
      "pg-aiguide",
      "refactor-mcp",
      "mcp-compass"
    ],
    "excluded": []
  }
}
